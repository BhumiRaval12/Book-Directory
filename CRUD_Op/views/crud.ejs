<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
        integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
        crossorigin="anonymous" />




    <script src=“https://code.jquery.com/jquery-3.5.1.min.js”> </script> <script
        src=“https://code.jquery.com/jquery-1.12.4.min.js”
        integrity=“sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=” crossorigin=“anonymous”></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>

    <title>WebCourseManagementSystem</title>
</head>

<body>
    <!-- include header -->
    <%- include('include/_header') %>
    <!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/form" class="border-shadow" type="button" class="btn btn-primary">
                    <span class="text-gradient" id="addCourseBtn">ADD Course <i class="fas fa-book"></i></span>
                </a>
            </div>


            <!-- form handling -->
            <% if(typeof courses != "undefined") {%>
            <table class="table" id="table_ID">
                <thead class="thead-dark" method='POST'>
                    <tr>
                        <th>ID</th>
                        <th>Course-Name</th>
                        <th>Duration</th>
                        <th>Fees</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% 
                    
                    
                    courses.forEach((value)=>{
                        %>
                    <tr>
                        <td><%= value.id%></td>
                        <td><%= value.Course_name%></td>
                        <td><%= value.Course_Duration%></td>
                        <td><%= value.Course_Fees%></td>

                        <td>
                            <a href="/edit/<%=value.id%>">
                                <span class='text-gradient'><i class='fas fa-pencil-alt'>
                                    </i></span></a>


                            <a href='/delete/<%=value.id%>'
                                onclick="return confirm('Are you sure you want to delete this item?');"
                                class="btn border-shadow delete">
                                <span class='text-gradient' id='del-btn'><i class='fas fa-trash'></i></span></a>

                        </td>


                    </tr>
                    <%
                    })
                    %>


                </tbody>
            </table>
            <%
            }
          else
          {  
            %>
            <div class="card">
                <div class="card-header text-center text-info">
                    <h4>There is Nothing ...Please Add First</h1>

                </div>
                <% }
          %>
            </div>
    </main>
    <!-- /Main Site -->




    <!-- include footer -->
    <%- include('include/_footer') %>
    <!-- /include footer -->
</body>

</html>